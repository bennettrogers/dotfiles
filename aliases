# Use neovim when installed
# NOTE: disabling this until I figure out why netrw is slow in neovim
# type nvim &>/dev/null && alias vim=nvim

# Color grep output
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias l='ls -CF'
alias ll='ls -al'
alias la='ls -A'
alias lt='ls -lt'

# git typos
alias gti='git'
alias got='git'

# Easier navigation: .., ..., ...., ....., and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd -"

# Unicode gpg
alias gpg='gpg2 --display-charset utf-8'

# Use OS X specific config file for Tmux
if command -v reattach-to-user-namespace &>/dev/null; then
    alias tmux='tmux -f ~/.tmux/conf/tmux.osx.conf'
else
    alias tmux='read -p "reattach-to-user-namespace is not installed.
Clipboard integration and launchctl will not function in Tmux." && tmux -f ~/.tmux/conf/tmux.conf'
fi
