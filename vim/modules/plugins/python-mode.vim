let g:pymode_options = 0

" trim trailing whitespace on save
let g:pymode_trim_whitespaces = 1

" turn off aggressive trailing whitespace errors
let g:pymode_syntax_space_errors = 0

" turn off linting
let g:pymode_lint = 1

" auto-detect virtualenv
let g:pymode_virtualenv = 1

" turn off colored column at max_line_length
let g:pymode_options_colorcolumn = 0

" disable rope and autocompletion
let g:pymode_rope = 0

" prevent autocomplete from opening the completion window
set completeopt=menu
